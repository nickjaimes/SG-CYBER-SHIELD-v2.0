# Create directory structure
mkdir -p scripts
mkdir -p images

# Move all v2.0 components to final location
cp ~/SG-Cyber-Shield-v2.0/*.sh .
cp ~/SG-Cyber-Shield-v2.0/trinity_ai/* trinity_ai/
cp ~/SG-Cyber-Shield-v2.0/eagle_eye/* eagle_eye/
cp ~/SG-Cyber-Shield-v2.0/elemental_framework/* elemental_framework/

# Create final structure overview
cat > STRUCTURE.md << 'EOF'
