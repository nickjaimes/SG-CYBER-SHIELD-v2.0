                echo "OPTIMIZATION: ğŸŸ¢ ACTIVE" 
                echo "SECURITY: ğŸŸ¢ ACTIVE"
                echo "PLATFORM: ğŸ macOS OPTIMIZED"
                ;;
            6) break ;;
            *) echo "Invalid selection" ;;
        esac
        
