        case $choice in
            1) macos_system_diagnostics ;;
            2) macos_optimization ;;
            3) macos_security ;;
            4) 
                echo "ğŸ”„ INITIATING FULL TRINITY CYCLE..."
                macos_system_diagnostics
                macos_optimization  
                macos_security
                echo "ğŸ‰ TRINITY CYCLE COMPLETED!"
